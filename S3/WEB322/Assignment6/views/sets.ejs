<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>Collection</title>
  </head>
  <body tabindex="-1">
    <!-- Nav bar -->
    <%- include('partials/navbar') %>
    <!-- End of Nav bar -->

    <!-- Header -->
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content flex-col lg:flex-row">
        <img
          src="/images/setHeader.jpeg"
          class="max-w-sm rounded-lg shadow-2xl"
        />
        <!-- Image generated by Image Creator powered by DALLÂ·E 3 -->

        <div>
          <h1 class="text-5xl font-bold">Collection!</h1>
          <p class="py-6">Specially recommended themes by editors</p>
          <button
            class="btn btn-outline btn-accent"
            onclick="location.href='/lego/sets?theme=Speed Champions'"
          >
            Speed Champions
          </button>
          <button
            class="btn btn-outline btn-secondary"
            onclick="location.href='/lego/sets?theme=Star Wars'"
          >
            Star Wars
          </button>
          <button
            class="btn btn-outline btn-primary"
            onclick="location.href='/lego/sets?theme=Cities of Wonders'"
          >
            Cities of Wonders
          </button>
        </div>
      </div>
    </div>
    <!-- End of Header -->

    <!-- Table -->
    <div class="overflow-x-auto">
      <table class="table">
        <!-- head -->
        <thead>
          <tr>
            <th>Name</th>
            <th>Theme</th>
            <th>Year & Parts</th>
            <th>Details</th>
          </tr>
        </thead>

        <!-- row -->

        <tbody>
          <% data.forEach(setData =>{ %>
          <tr>
            <td>
              <div class="flex items-center space-x-3">
                <div class="avatar">
                  <div class="mask mask-squircle w-12 h-12">
                    <img
                      src="<%= setData.img_url %>"
                      alt="Lego image"
                      loading="lazy"
                      class="avatar"
                    />
                  </div>
                </div>
                <div>
                  <div class="font-bold"><%= setData.name %></div>
                </div>
              </div>
            </td>

            <td>
              <a
                class="btn btn-outline btn-xs btn-success"
                href="/lego/sets?theme=<%= setData.Theme.name %>"
                ><%= setData.Theme.name %></a
              >
            </td>

            <td>
              <div class="text-sm opacity-50">Year: <%= setData.year %></div>
              <span class="badge badge-ghost badge-sm"
                >Parts: <%= setData.num_parts %></span
              >
            </td>

            <td>
              <a
                class="btn btn-outline btn-xs btn-info"
                href="/lego/sets/<%= setData.set_num %>"
                >Details</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <!-- End of Table -->
  </body>
</html>
